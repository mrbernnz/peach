<%= form_for @books, url: {action: 'update'} do |f| %>
  <%= f.label :title, value: @books.title %>
  <br /><br />

  <%= f.label :author, value: @books.author %>
  <br /><br />

  <%= f.label :status %>
  <%= f.check_box :status, value: @books.status %>
  <br /><br />
  <%= f.submit %>
  <% end %>
